<Project Sdk="Dalamud.NET.Sdk/14.0.1">
    <PropertyGroup>
        <Version>1.1.2.0</Version>
    </PropertyGroup>

    <PropertyGroup>
        <Author>MidoriKami</Author>
        <Name>VanillaPlus</Name>
        <InternalName>VanillaPlus</InternalName>
        <Punchline>A collection of various game modifications</Punchline>
        <Description>This plugin is primarily focused on various UI adjustments, behavior adjustments, and adding new native elements to the game</Description>
        <RepoUrl>https://github.com/MidoriKami/VanillaPlus</RepoUrl>
        <Tags>ui</Tags>
        <AcceptsFeedback>false</AcceptsFeedback>
        <NoWarn>$(NoWarn);Dalamud001</NoWarn>
    </PropertyGroup>
    
    <ItemGroup>
        <ProjectReference Include="..\KamiToolKit\KamiToolKit.csproj"/>
        <PackageReference Include="LuminaSupplemental.Excel" Version="4.0.1" />
    </ItemGroup>

    <PropertyGroup>
        <ResXGenerator_NullForgivingOperators>true</ResXGenerator_NullForgivingOperators>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Assets\**\*.png" CopyToOutputDirectory="Always"/>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\Strings.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Strings.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\Strings.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Strings.resx</DependentUpon>
      </Compile>
    </ItemGroup>
</Project>
